.places {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	width: 100%;
	font-size: 30px;
}

.places h1 {
	width: 100%;
	text-align: left;
	font-size: 30px;
}

.places article {
	flex:1;
	flex-shrink: 0;
	flex-grow: 0;
	flex-basis: 390px;
	flex-direction: row;
	margin: 20px;
	padding: 20px;
	border: 1px solid #ff5a5f;
	border-radius: 4px;
}

.places article h2 {
	display: inline-flex;
	font-size: 30px;
}

.price_by_night {
	display: inline-flex;
	justify-content: center;
	align-items: center;
	color: #ff5a5f;
	border: 4px solid #ff5a5f;
	border-radius: 50%;
	min-width: 60px;
	height: 60px;
	font-size: 30px;
	padding: 5px;
}

.information {
	height: 80px;
	border-top: 1px solid #ddd;
	border-bottom: 1px solid #ddd;
	flex-direction: row;
}

.max_guest, .number_rooms, .number_bathrooms {
	display: inline-flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 14px;
	width: 100px;
}

.number_bathrooms .icon {
	background-image: url("/images/icon_bed.png");
	background-repeat: no-repeat;
	width: 100px;
	padding: 10px;
	margin: 0px auto;
}

.number_rooms .icon {
	flex: 1;
	width: 100px;
	background-image: url("../images/icon_bed.png");
}

.max_guest .icon {
	width:100px;
	background-image: url("../image/icon_bed.png");
	background-repeat: no-repeat;
}
